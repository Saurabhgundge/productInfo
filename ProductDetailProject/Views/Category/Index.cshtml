@model PagedList.IPagedList<ProductDetailProject.Models.CategoryTable>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<style>
    .image {
        background-image: url('https://coolbackgrounds.io/images/backgrounds/white/white-triangle-369b8d2d.jpg');
    }
</style>
<body class="image">

    <center><h2><u>Category Table</u></h2></center>
    
    <h4>
        <b>
            @Html.ActionLink("Insert New", "Insert")
        </b>
    </h4>
    <br />
    <table class="table table-striped">
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) ||
                    @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
                </td>
            </tr>
        }

    </table>

    <div>
        page @(Model.PageCount <Model.PageNumber ?0:Model.PageNumber)/@Model.PageCount
    </div>
    <div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>

</body>